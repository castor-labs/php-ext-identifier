{
    "name": "php-ext-identifier/benchmarks",
    "description": "Performance benchmarks for PHP Identifier Extension",
    "type": "project",
    "require": {
        "php": "^8.1",
        "phpbench/phpbench": "^1.2",
        "ramsey/uuid": "^4.7",
        "symfony/uid": "^6.3"
    },
    "require-dev": {
        "ext-uuid": "*"
    },
    "autoload": {
        "psr-4": {
            "Bench\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "bench": "phpbench run --report=default",
        "bench-baseline": "phpbench run --tag=baseline --dump-file=baseline.xml",
        "bench-compare": "phpbench run --ref=baseline",
        "bench-html": "phpbench run --report=html --output=results/report.html",
        "quick-bench": "php simple/quick_comparison.php"
    }
}
